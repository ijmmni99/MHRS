@model MHRS.Models.LogBook

@{
    ViewBag.Title = "Edit_LogBook";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <h2>Edit LogBook</h2>
                    </div>
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-md-12">
                                <fieldset>
                                    <label for="demo-priority-medium">Title </label>
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            <div class="col-md-12">
                                <fieldset>
                                    <label for="demo-priority-medium">Details </label>
                                    @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </fieldset>
                            </div>

                            @Html.HiddenFor(x => x.LogBook_ID)

                            <div class="primary-button col-md-12">
                                @Html.ActionLink("Back", "LogBook", new { id = Model.Session_ID, currentUser = Session["hmm"].ToString() }, new { @class = "button" })
                                <button type="submit" id="form-submit" class="button">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

}
