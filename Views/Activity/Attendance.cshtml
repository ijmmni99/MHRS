@model IEnumerable<MHRS.Models.Activity_Student>

@{
    ViewBag.Title = "Attendance";
    @Html.Raw(TempData["msg"]);
}

<h2>Attendance</h2>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attend)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attend)
            </td>
            <td>
                @Html.ActionLink("Attend", "Attend", new { id = item.Activity_Student_ID, student_id = item.Student_ID , activityid = item.Activity_ID}) |
                @Html.ActionLink("Not Attend", "Not_Attend", new { id = item.Activity_Student_ID, student_id = item.Student_ID, activityid = item.Activity_ID })
            </td>
        </tr>
    }

</table>
