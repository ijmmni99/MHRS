@model MHRS.Models.Staff
@{
    ViewBag.Title = "Staff";
    Layout = "~/Views/stafflayout.cshtml";
}

<h2>Staff Profile</h2>

<div class="row">
    <section class="col-md-6">
        <hr />
        <dl class="dl-horizontal">

            <dt>
                NAME :
            </dt>

            <dd>
                @Model.Fname.ToUpper()   @Model.Lname.ToUpper()
            </dd>
            <br>
            <dt>
                STAFF MATRIC :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Staff_ID)
            </dd>
            <br>
            <dt>
                DESIGNATION :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Designation)
            </dd>
            <br>
            <dt>
                DIVISION :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Division)
            </dd>
            <br>
            <dt>
                UNIT :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Unit)
            </dd>
            <br>
            <dt>
                PHONE NUMBER :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Phone_No)
            </dd>
            <br>
            <dt>
                EMAIL :
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>


        </dl>
    </section>
    <section class="col-md-4">
        <dd>
            @if (Model.Staff_Image != null)
            {
                string imageBase64 = Convert.ToBase64String(Model.Staff_Image);
                string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
                <img src="@imageSrc" style="width: 70%" />
            }
            else
            {
                <img src="~/Scripts/images/images.png" />
            }


        </dd>


    </section>

</div>
@Html.ActionLink("Edit Profile", "staffedit", new { id = Model.Staff_ID })