@model MHRS.Models.Session
@{
    ViewBag.Title = "Chat";
}

<link href="~/Scripts/css/chats.css" rel="stylesheet">

<div class="page-heading">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">

                @if (ViewBag.currentLogin == "staff")
                {
                    <h1>Chat Student</h1>
                }
                else
                {
                    <h1>Chat Counselor</h1>
                }

            </div>
        </div>
    </div>
</div>

<input value="@Model.Session_ID" id="session_id" hidden />

@{
    if (ViewBag.currentLogin == "staff")
    {
        <input value="@Model.Staff_ID" id="user_id" hidden />
        <input value="@Model.Staff.Fname" id="user_name" hidden />
    }
    else
    {
        <input value="@Model.Student_ID" id="user_id" hidden />
        <input value="@Model.Student.Fname" id="user_name" hidden />
    }
}

<div class="card border-1 m-0 p-0 position-relative bg-transparent" id="chats-container" style="overflow-y: auto; height: 50vh;">

</div>

<br />
<form id="task-form" autocomplete="off">

    <div class="input-group mb-3">
        <input id="task-description" rows="3" class="form-control" placeholder="Type message here...">
        <div class="input-group-append">
            <button class="btn btn-primary" id="btn-task-form">Send</button>
        </div>
    </div>

</form>



