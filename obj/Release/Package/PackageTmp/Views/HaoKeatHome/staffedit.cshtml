@model MHRS.Models.Staff

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/stafflayout.cshtml";
}

<h2>Edit Your Profile</h2>

@using (Html.BeginForm("staffedit", "HaoKeatHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Staff</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Staff Matric
            <div class="col-md-10">
                @Html.EditorFor(model => model.Staff_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Staff_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            First Name
            <div class="col-md-10">
                @Html.EditorFor(model => model.Fname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Last Name
            <div class="col-md-10">
                @Html.EditorFor(model => model.Lname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Lname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Designation
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Designation, new List<SelectListItem>
                   {new SelectListItem {Text = "PEGAWAI PSIKOLOGI", Value="PEGAWAI PSIKOLOGI"  }

               }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Division
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Division, new List<SelectListItem>
                   {new SelectListItem {Text = "BAHAGIAN PERKHIDMATAN PELAJAR", Value="BAHAGIAN PERKHIDMATAN PELAJAR"  },
                    new SelectListItem {Text = "PUSAT PENGURUSAN ALUMNI & KEBOLEHANPASARAN GRADUAN", Value="PUSAT PENGURUSAN ALUMNI & KEBOLEHANPASARAN GRADUAN"  },
                    new SelectListItem {Text = "BAHAGIAN SUMBER MANUSIA", Value="BAHAGIAN SUMBER MANUSIA"  },
                    new SelectListItem {Text = "BAHAGIAN PERKHIDMATAN PELAJAR", Value="BAHAGIAN PERKHIDMATAN PELAJAR"  }
                   }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Division, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Unit
            <div class="col-md-10">
                @Html.EditorFor(model => model.Unit, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Unit, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Phone Number
            <div class="col-md-10">
                @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone_No, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Email
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Password
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Role
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Role_ID, new List<SelectListItem>
                   {new SelectListItem {Text = "Admin", Value="1"  },
                    new SelectListItem {Text = "Staff", Value="2"  }
                   }, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            Upload Your Profile Picture
            <fieldset>
                <br />
                <input type="file" name="postedFile" onchange="readURL(this);" />

            </fieldset>
        </div>
        @Html.Raw(TempData["msg"])

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="button" />
            </div>
        </div>
    </div>
}


